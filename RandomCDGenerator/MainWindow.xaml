<Window x:Class="RandomCDGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomCDGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Music directory" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top" Height="73" >
            <Grid>
                <TextBox x:Name="txtMusicDir" HorizontalAlignment="Left" Height="23" Margin="4,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="389"/>
                <Button x:Name="btnScandir" Content="Sök" HorizontalAlignment="Left" Margin="400,3,0,0" VerticalAlignment="Top" Width="75" Click="btnScandir_Click"/>
                <TextBlock x:Name="lblDirectoryStatus" HorizontalAlignment="Left" Margin="4,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
